<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_up_options_horizontal_main_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pop_up_overlay">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pop_up_options_horizontal_content_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:alpha="1"
        android:background="@drawable/bg_pop_ups"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="18dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pop_up_options_horizontal_main_header_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="First Header"
            android:textColor="@color/app_black"
            android:textSize="@dimen/default_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pop_up_options_horizontal_secondary_header_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:lineHeight="@dimen/default_30sp"
            android:text="Second Header"
            android:textColor="@color/app_dark_gray"
            android:textSize="@dimen/default_16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_options_horizontal_main_header_tv" />


        <TextView
            android:id="@+id/pop_up_options_horizontal_action_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="Action"
            android:textAllCaps="true"
            android:textColor="@color/app_red"
            android:textSize="@dimen/default_14sp"
            app:layout_constraintEnd_toStartOf="@+id/pop_up_options_horizontal_skip_tv"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_options_horizontal_secondary_header_tv" />

        <TextView
            android:id="@+id/pop_up_options_horizontal_skip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.1"
            android:text="Skip"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_14sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_options_horizontal_action_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pop_up_options_horizontal_action_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
