<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pop_up_options_horizontal_with_input_main_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_pop_up_overlay">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pop_up_options_horizontal_with_input_content_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:background="@drawable/bg_pop_ups"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="18dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline9"
        app:layout_constraintStart_toStartOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pop_up_options_horizontal_with_input_main_header_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:text="First Header"
            android:textColor="@color/app_black"
            android:textSize="@dimen/default_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/pop_up_options_horizontal_with_input_input_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/roboto_regular"
            android:hint="Some hint"
            android:includeFontPadding="true"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:paddingBottom="18dp"
            android:textColor="@color/app_black"
            android:textColorHint="@color/app_dark_gray"
            android:textSize="@dimen/default_16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_options_horizontal_with_input_main_header_tv" />


        <TextView
            android:id="@+id/pop_up_options_horizontal_with_input_secondary_action_skip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_14sp"
            app:layout_constraintEnd_toStartOf="@+id/pop_up_options_horizontal_with_input_secondary_action_agree_tv"
            app:layout_constraintTop_toBottomOf="@+id/pop_up_options_horizontal_with_input_input_et" />

        <TextView
            android:id="@+id/pop_up_options_horizontal_with_input_secondary_action_agree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.1"
            android:text="Action agree"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/default_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/pop_up_options_horizontal_with_input_secondary_action_skip_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pop_up_options_horizontal_with_input_secondary_action_skip_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.035" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96625" />


</androidx.constraintlayout.widget.ConstraintLayout>
